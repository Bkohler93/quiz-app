<div class="question-card hidden">
  <h3>Question <span id="questNum">{{number}}</span> of</h3>
  <p id="question">{{text}}</p>
  <div class="ans-container">
    <div class="ans">
      <input type="radio" name="ans" class="a" />
      <label id="ans-one" for="ans-one">{{A}}</label>
    </div>
    <div class="ans">
      <input type="radio" name="ans" class="b" />
      <label id="ans-two" for="ans-two">{{B}}</label>
    </div>
    <div class="ans">
      <input type="radio" name="ans" class="c" />
      <label id="ans-three" for="ans-three">{{C}}</label>
    </div>
    <div class="ans">
      <input type="radio" name="ans" class="d" />
      <label id="ans-four" for="ans-four">{{D}}</label>
    </div>
  </div>
</div>